rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Events collection
    match /events/{eventId} {
      // Anyone can read published events
      allow read: if resource.data.status == 'active' || resource.data.status == 'completed';
      
      // Authenticated users can read all events (including drafts)
      allow read: if request.auth != null;
      
      // Authenticated users can create events
      allow create: if request.auth != null;
      
      // Event creators/admins can update/delete
      allow update, delete: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read all users
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Clubs collection
    match /clubs/{clubId} {
      // Anyone can read clubs
      allow read: if true;
      
      // Only authenticated users can create clubs
      allow create: if request.auth != null;
      
      // Club admins can update
      allow update, delete: if request.auth != null &&
        resource.data.admins.hasAny([request.auth.uid]);
    }
    
    // Entries subcollection (under events)
    match /events/{eventId}/entries/{entryId} {
      // Same rules as parent event
      allow read: if get(/databases/$(database)/documents/events/$(eventId)).data.status == 'active';
      allow read, write: if request.auth != null;
    }
    
    // Results subcollection
    match /events/{eventId}/results/{resultId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Tracks collection
    match /tracks/{trackId} {
      // Owner can do everything
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid || request.auth.uid == request.resource.data.userId);
      
      // Public read if track is linked to a public/active event
      allow read: if resource.data.eventId != null && 
        get(/databases/$(database)/documents/events/$(resource.data.eventId)).data.status in ['active', 'completed'];
    }

    // Club Activities
    match /club_activities/{activityId} {
      allow read: if true; // Or restrict to club members
      allow write: if request.auth != null; // Ideally check for club admin role
    }

    // Activity Registrations
    match /activity_registrations/{regId} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.resource.data.userId == request.auth.uid || // Self-registration
        request.auth.uid == resource.data.userId || // Self-update
        true // Ideally check for club admin role for attendance marking
      );
    }
  }
}
